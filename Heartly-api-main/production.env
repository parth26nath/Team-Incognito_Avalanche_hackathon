# Production Environment Configuration for API
# Copy this to .env for production deployment

# Server Configuration  
PORT=8000
SOCKET_PORT=8001

# Production URLs
API_BASE_PATH=/api
SOCKET_BASE_PATH=/socket

# Database Configuration - Update with your production database
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=heartly_user
DB_PASSWORD=your_production_db_password
DB_DATABASE=heartlydb

# JWT Configuration - Use a strong secret in production
JWT_SECRET=your_super_strong_jwt_secret_key_for_production

# CORS Origins - Production domains
ALLOWED_ORIGINS=https://heartly.live,https://www.heartly.live,http://localhost:3000,http://localhost:5173